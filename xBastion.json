{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "usgovtexas"
        },
        "resourceGroup": {
            "type": "string",
            "defaultValue": "Misc-TX-RG"
        },
        "bastionHostName": {
            "type": "string",
            "defaultValue": "Bastion1"
        },
        "subnetId": {
            "type": "string",
            "defaultValue": "/subscriptions/dc9d4bdd-8dfc-4339-bf54-42acec545c4a/resourceGroups/Misc-TX-RG/providers/Microsoft.Network/virtualNetworks/TX-vNet/subnets/AzureBastionSubnet"
        },
        "bastionHostSku": {
            "type": "string",
            "defaultValue": "Standard"
        },
        "bastionHostScaleUnits": {
            "type": "int",
            "defaultValue": "2"
        },
        "enableIpConnect": {
            "type": "bool",
            "defaultValue": true
        },
        "enableTunneling": {
            "type": "bool",
            "defaultValue": true
        },
        "enableShareableLink": {
            "type": "bool",
            "defaultValue": true
        },
        "enableKerberos": {
            "type": "bool",
            "defaultValue": false
        },
        "disableCopyPaste": {
            "type": "bool",
            "defaultValue": true
        },
        "publicIpAddressId": {
            "type": "string",
            "defaultValue": "/subscriptions/dc9d4bdd-8dfc-4339-bf54-42acec545c4a/resourceGroups/Misc-TX-RG/providers/Microsoft.Network/publicIPAddresses/Bastion-pip1"
        }
    },
    "resources": [
        {
            "apiVersion": "2020-11-01",
            "type": "Microsoft.Network/bastionHosts",
            "name": "[parameters('bastionHostName')]",
            "sku": {
                "name": "[parameters('bastionHostSku')]"
            },
            "location": "[parameters('location')]",
            "dependsOn": [],
            "properties": {
                "enableIpConnect": "[parameters('enableIpConnect')]",
                "enableTunneling": "[parameters('enableTunneling')]",
                "enableShareableLink": "[parameters('enableShareableLink')]",
                "enableKerberos": "[parameters('enableKerberos')]",
                "disableCopyPaste": "[parameters('disableCopyPaste')]",
                "ipConfigurations": [
                    {
                        "name": "IpConf",
                        "properties": {
                            "subnet": {
                                "id": "[parameters('subnetId')]"
                            },
                            "publicIPAddress": {
                                "id": "[parameters('publicIpAddressId')]"
                            }
                        }
                    }
                ],
                "scaleUnits": "[parameters('bastionHostScaleUnits')]"
            },
            "tags": {}
        }
    ]
}